<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.UI.onboard1">

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="300dp"
    android:translationY="50dp"
    android:translationX="25dp"
    android:src="@drawable/onboard1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="350dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/onboard1shoes" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Journey \nWith Nike"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Smart, Gorgeous and Fashionable \nCollection"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:src="@drawable/onboardrectangle" />

                <Button
                    android:id="@+id/onboard1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/botton"
                    android:text="  Get started  "
                    android:textColor="@color/white"
                    android:translationX="150dp" />


            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
